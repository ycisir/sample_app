<%= render "common_templates/company_name" %>
<h1>List users</h1>

<table border='1'>
	
	<th>First name</th>
	<th>Last name</th>
	<th>Age</th>
	<th>City</th>
	<th>Gender</th>

	<% if @users %>
		<% @users.each do |user| %>
			<tr>
				<!--<td><%# link_to user.firstname, action: :show, id: user %></td>-->
				<td><%= link_to user.firstname, show_user_path(user) %></td>
				<!--<td><%# link_to user.lastname, action: :show, id: user %></td>-->
				<td><%= link_to user.lastname, show_user_path(user) %></td>
				<td><%= user.age %></td>
				<td><%= user.city_name %></td>
				<!-- <td><%# user.gender %></td> -->

				<%# using helper method found in app/helpers %>
				<!-- <td><%# gender_string(user.gender) %></td> -->


				<%# writing method in model %>
				<%# in smaller case write it in a model %>
				<td><%= user.gender_string %></td>

			</tr>
		<% end %>
	<% else %>
		No data
	<% end %>

</table>

